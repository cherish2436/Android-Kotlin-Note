<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp">

    <ImageView
            android:id="@+id/item_item_note_list_month_img"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="16dp"
            android:src="@color/black_333333"
            android:visibility="gone"
            android:layout_centerVertical="true"/>

    <View
            android:id="@+id/item_item_note_list_month_line"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="0.5dp"
            android:background="@color/grey_d1d9e0"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toStartOf="@id/item_item_note_list_month_img">

        <TextView
                android:id="@+id/item_item_note_list_month_title"
                android:layout_width="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/black_4d4d4d"
                android:singleLine="true"
                android:text="测试"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/item_item_note_list_month_content"
                android:layout_width="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/grey_888888"
                android:singleLine="true"
                android:layout_marginTop="3dp"
                android:text="测试"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/item_item_note_list_month_date"
                android:layout_width="wrap_content"
                android:textSize="12dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/grey_888888"
                android:singleLine="true"
                android:text="5月31日 下午10:04"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>